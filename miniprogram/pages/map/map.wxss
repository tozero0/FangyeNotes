/* pages/map/map.wxss */
page {
    height: 100%;
    line-height: 1.6;
    background-color: rgba(226, 226, 226, 0.849);
}

.contianer {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    height: 100vh;
}

.top {
    width: 100%;
    height: 5vh;
    text-align: center;
    font-size: 40rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    align-items: center;
    justify-content: center;
}

.map-body {
    box-sizing: border-box;
    height: 43vh;
    padding: 12rpx;
    background-color: rgb(255, 255, 255);
}

.map {
    width: 100%;
    height: 600rpx;
}

.moveButton {
    position: relative;
    height: 6vh;
    margin-top: 0.33vh;
    padding: 12rpx 0;
    background-color: rgb(255, 255, 255);
    display: flex;
    align-items: center;
    justify-content: center;
}

.moveButton button {
    align-items: center;
    justify-content: center;
    height: 72rpx;
    font-size: 36rpx;
}

.switch {
    position: relative;
    width: 100%;
}

.switch_bar {
    position: relative;
    height: 6vh;
    padding: 4rpx 5%;
    margin-top: 0.33vh;
    background-color: rgb(255, 255, 255);
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.text {
    width: 80%;
    font-size: 36rpx;
}

.location_text_body {
    margin-top: 0.33vh;
    background-color: rgb(255, 255, 255);
    padding: 12rpx 0;
    height: 27vh;
}

.location_text_title {
    font-size: 48rpx;
}

.location_text {
    font-size: 32rpx;
    width: 96%;
    margin: 0 1.5% 0 2.5%;
}