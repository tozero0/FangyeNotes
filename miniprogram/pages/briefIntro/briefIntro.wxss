/* pages/briefIntro/briefIntro.wxss */
.container {
    position: fixed;
    width: 100%;
    height: 100%;
}

.page {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 10;
}

.cover {
    position: fixed;
    width: 100%;
    height: 100%;
}

.bg {
    position: fixed;
    height: 100%;
    left: -30%;
}

.mask {
    z-index: 2;
    position: fixed;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.8));
}

.animation_mask {
    z-index: 3;
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgb(0, 0, 0);
}

.logo {
    position: fixed;
    height: 60px;
    width: 247.59px;
    top: 200rpx;
    left: 0;
    right: 0;
    margin: auto;
    z-index: 3;
}

.topPara {
    position: fixed;
    width: 90%;
    bottom: 0;
    margin: 0 5% 10% 5%;
}

.topPara_title {
    position: relative;
    margin: 8rpx;
    height: 72rpx;
    font-size: 48rpx;
    color: rgb(235, 235, 235);
}

.topPara_text {
    position: relative;
    margin: 24rpx 12rpx 0 12rpx;
    font-size: 32rpx;
    color: rgb(231, 231, 231);
}

.remind {
    position: relative;
    margin: 48rpx;
    padding-top: 16rpx;
    font-family: '楷体';
    font-size: 32rpx;
    color: rgb(232, 232, 232);
}

.body {
    background-color: rgba(255, 255, 255, 0.733);
    position: absolute;
    width: 93%;
    height: 75%;
    left: 0;
    right: 0;
    margin: auto;
    top: 100%;
    z-index: 11;
    border-style: solid;
    border-radius: 20rpx;
    border-color: rgb(235, 155, 36);
    border-width: 12rpx;
    display: flex;
}

.body_title {
    margin: 20rpx;
    position: relative;
    justify-content: center;
    font-size: 48rpx;
}

.box {
    margin: 20rpx;
    display: flex;
    flex-direction: column;
}

.title {
    color: rgb(8, 58, 116);
    font-size: 36rpx;
    margin: 16rpx 0 12rpx 12rpx;
}

.text {
    margin: 12rpx 8rpx 12rpx 12rpx;
    font-weight: 500;
}

.image_box {
    display: flex;
    justify-content: center;
}

.image_box image {
    height: 200rpx;
    margin: 16rpx;
}