/* pages/history/history.wxss */
.container {
    position: fixed;
    width: 100vh;
    height: 100vh;
}

.bg {
    position: fixed;
    width: 100vh;
    height: 100vh;
    opacity: 0;
}

.bg image {
    position: fixed;
    height: 100vh;
    left: -25vh;
}

.text_body {
    position: fixed;
    width: 90%;
    left: 0;
    margin: 0 5%;
    top: 115vh;
    z-index: 5;
    background-color: rgba(255, 255, 255, 0.55);
}

.title {
    font-size: 56rpx;
    font-weight: 800;
    padding-left: 36rpx;
    padding-top: 24rpx;
    text-shadow: 1rpx 1rpx 6rpx ivory;
}

.mask {
    z-index: 4;
    position: fixed;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0));
}

.line {
    position: relative;
    width: inherit;
    height: 1.5rpx;
    background-color: rgb(0, 0, 0);
    margin: 4rpx 24rpx;
}

.text {
    font-size: 32rpx;
    font-weight: 550;
    padding-left: 24rpx;
    text-shadow: 0rpx 0rpx 2rpx ivory;
}

.first_page {
    position: fixed;
    width: 100vw;
    height: 100vh;
    display: flex;
    z-index: -10;
    flex-direction: column;
}

.first_title {
    position: relative;
    width: 100%;
    text-align: center;
    font-size: 48rpx;
    font-weight: 600;
    text-shadow: 1rpx 1rpx 2rpx rgb(226, 226, 226);
    margin-top: 36rpx;
}

.first_text {
    position: relative;
    width: 90%;
    margin: 60rpx auto;
    padding-left: 12rpx;
    padding-top: 24rpx;
    font-size: 36rpx;
    font-weight: 560;
    text-shadow: 1rpx 1rpx 4rpx white;
}

.first_bg {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: -40px;
    z-index: -8;
}

.first_bg image {
    width: 100%;
}