/* pages/about/about.wxss */
.container {
    position: fixed;
    width: 100vh;
    height: 100vh;
    background-color: rgb(240, 240, 240);
}

.top {
    position: fixed;
    width: 100%;
    height: 30%;
    display: flex;
    justify-content: center;
}

.profile {
    position: relative;
    top: 80px;
}

.profile image {
    width: 100px;
    height: 100px;
    border-radius: 50%;
}

.info {
    position: fixed;
    width: 100%;
    top: 200px;
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
}

.title {
    font-size: 52rpx;
}

.version {
    font-size: 36rpx;
    margin-top: 12rpx;
}

.main {
    position: fixed;
    top: 40%;
    width: 92%;
    margin: 4%;
    padding-left: 12rpx;
}

.main_title {
    font-size: 40rpx;
    padding-left: 24rpx;
    margin-top: 32rpx;
}

.main_text{
    font-size: 32rpx;
    margin: 12rpx 32rpx 0 24rpx;
    display: flex;
}

.email {
    border-bottom: 1px solid #000;
    padding-bottom: 0.8px;
}

.officalAccount {
    color: rgb(13, 57, 202);
    font-weight: 600;
    font-size: 36rpx;
}

.jump_icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: 5rpx;
    margin-top: 3rpx;
}

.privacy {
    font-size: 32rpx;
    color: rgb(12, 43, 219);
    position: fixed;
    width: 100%;
    top: 90%;
    text-align: center;
}