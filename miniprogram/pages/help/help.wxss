/* pages/help/help.wxss */
.container {
    position: absolute;
    width: 100%;
    height: 100%;
}

.body {
    width: 90%;
    margin: 24rpx auto;
    border-style: solid;
    border-color: rgb(151, 151, 151);
    border-radius: 32rpx;
    border-width: 12rpx;
    position: relative;
    top: 72rpx;
}

.top {
    position: fixed;
    width: 100%;
    padding-top: 12rpx;
    background-color: #fff;
    z-index: 10;
    margin: 0 auto;
    font-size: 40rpx;
    text-align: center;
}

.pic {
    width: 80%;
    margin: 24rpx auto;
}

.pic image {
    width: 100%;
}

.text {
    position: relative;
    width: 80%;
    margin: 12rpx auto;
    border-bottom: solid;
    height: 160rpx;
}

.num {
    font-size: 60rpx;
    font-weight: 600;
}

.main {
    font-size: 32rpx;
    position: absolute;
    top: 32rpx;
}